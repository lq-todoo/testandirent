<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_quant_custom_list_view" model="ir.ui.view">
            <field name="name">stock_quant_custom_list_view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="before">
                    <field name="location" optional="show"/>
                    <field name="warehouse_id" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="transit_location_id" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="plaque_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="stock_quant_custom_tree_editable_view" model="ir.ui.view">
            <field name="name">stock_quant_custom_tree_editable_view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="plaque_id" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>